@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
            <img class="image-fluid" src="/img/@Model.Image" />
        </div>
    </div>
    <div class="col-md-10">
        <div class="bg-white p-2">
            <h5>@Model.Name</h5>
            <hr />
            <div class="posts">
                <h5 class="my-4">Yayınlanan Gönderiler</h5>
                <ul class="list-group">
                    @foreach(var post in Model.Posts)
                    {
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i> <a href="/post/detay/@post.Url">@post.Title</a></li>
                    }
                </ul>
            </div>
            <div class="comments">
                <h5 class="my-4">Yorumları</h5>
                <ul class="list-group">
                    @foreach(var comment in Model.Comments)
                    {
                        <li class="list-group-item"><i class="bi bi-chat-right-text-fill"></i>@comment.Text <i> <u><a href="/post/detay/@comment.Post.Url">[@comment.Post.Title]</a></u></i></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
